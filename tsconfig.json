{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@graphql/*": ["./src/graphql/*"],
      "@lib/*": ["./src/lib/*"],
      "@models/*": ["./src/models/*"]
    },
    "strict": true,
    "module": "CommonJS",
    "target": "ES2019",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "./src/typings"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
